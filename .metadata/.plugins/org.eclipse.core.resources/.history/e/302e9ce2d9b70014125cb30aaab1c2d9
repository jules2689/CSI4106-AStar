package game;

import java.util.ArrayList;

import game.Block.BlockType;

public class GameBoard {
	
	public Block[][] gameBoard;
	
	public GameBoard(int size) {
		this.gameBoard = new Block[size][size];
		initializeStartPositions();
	}
	
	private void initializeStartPositions() 
	{
		Block startPos1 = this.gameBoard[0][0];
		Block startPos2 = this.gameBoard[this.gameBoard.length - 1][0];
		Block startPos3 = this.gameBoard[0][this.gameBoard.length - 1];
		Block startPos4 = this.gameBoard[this.gameBoard.length - 1][this.gameBoard.length - 1];
		
		startPos1.blockType = BlockType.PLAYER;
		startPos2.blockType = BlockType.PLAYER;
		startPos3.blockType = BlockType.PLAYER;
		startPos4.blockType = BlockType.PLAYER;
		
		Block goalPosition = this.gameBoard[3][3];
		goalPosition.blockType = BlockType.GOAL;
	}

	private int[][] walls(boolean specialGame) 
	{
		ArrayList<int[]> walls = new ArrayList<int[]>();
		walls.add(new int[]{0,3});
		walls.add(new int[]{1,1});
		walls.add(new int[]{1,4});
		walls.add(new int[]{2,1});
		walls.add(new int[]{2,4});
		walls.add(new int[]{3,1});
		walls.add(new int[]{3,2});
		walls.add(new int[]{3,3});
		walls.add(new int[]{4,2});
		walls.add(new int[]{5,2});
		walls.add(new int[]{5,3});
		walls.add(new int[]{5,4});
		if (specialGame) {
			walls.add(new int[]{6,5});
		}
	}

}
