package game;

public class Block {
	BlockType blockType;
	
	public enum BlockType {
	    WALL, GOAL, PLAYER, VOID, EMPTY
	}
	
	public Block(BlockType blockType) {
		this.blockType = blockType;
	}
	
	public void printBlock() {
		switch (this.blockType) {
		case WALL:
			System.out.print('☒');
			break;
		case GOAL:
			System.out.print('☆');
			break;
		case PLAYER:
			System.out.print('☺');
			break;
		case EMPTY:
			System.out.print('☐');
			break;
		case VOID:
			System.out.print('X');
			break;
		}
	}

}
