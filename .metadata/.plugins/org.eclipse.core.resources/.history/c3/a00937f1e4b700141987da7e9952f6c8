import game.Block;
import game.GameBoard;

public class Runner {

	public static void main(String[] args) {
		GameBoard gameBoard = new GameBoard(7);
		gameBoard.printGameBoard();
		
		Block block = gameBoard.getBlock(0, 0);
		System.out.println(block.horizontalDistanceToGoal());
		System.out.println(block.numObstaclesInPath());
		
		Block block2 = gameBoard.getBlock(0, 6);
		System.out.println(block2.numObstaclesInPath());
		
		Block block3 = gameBoard.getBlock(6, 0);
		System.out.println(block3.numObstaclesInPath());
		
		Block block4 = gameBoard.getBlock(6, 6);
		System.out.println(block4.numObstaclesInPath());
	}

}
