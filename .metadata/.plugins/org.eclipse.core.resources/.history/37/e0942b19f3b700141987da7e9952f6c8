package game;

import java.util.Comparator;

public class AStarStats implements Comparator
{
	public Block player;
    public int numVisited;
    public int lengthOfPath;
    
    public AStarStats(Block player, int numVisited, int lengthOfPath) {
    	this.player = player;
    	this.numVisited = numVisited;
    	this.lengthOfPath = lengthOfPath;
    }

	@Override
	public int compare(Object o1, Object o2) {
		AStarStats oa1 = (AStarStats)o1;
		AStarStats oa2 = (AStarStats)o2;
		if (oa1.lengthOfPath > oa2.lengthOfPath) {
			return 1;
	    } else if (oa1.lengthOfPath < oa2.lengthOfPath){
	        return -1;
	    } else {
	        return 0;
	    }
	}
} 